@charset 'UTF-8'

/* =============================================================================
   FONTS
   ========================================================================== */
@import url('https://fonts.googleapis.com/css?family=Open+Sans');
$OpenSans = 'Open Sans', sans-serif


/* =============================================================================
   COLORS
   ========================================================================== */
$black        = #000000
$white        = #ffffff

$black-variations  = monochrome($black)


/* =============================================================================
   HELPERS
   ========================================================================== */
.uppercase
    text-transform uppercase
    
.align-center
    text-align center
    
.align-right
    text-align right

.small
    font-size 0.75rem

$default-transition = 0.25s all ease


/* =============================================================================
   MEDIA QUERIES
   ========================================================================== */
$screen-sm       = 480px
$screen-md       = 768px
$screen-lg       = 1200px
